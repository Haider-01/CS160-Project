<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewSetting"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/wallet" />

    <TextView
        android:id="@+id/tv_title_settings"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="Edit Budgets And Costs: "
        android:textColor="#000000"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewBills"
            android:layout_width="295dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/cv2" />

        <EditText
            android:id="@+id/edt_bill_settings"
            android:layout_width="266dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:hint="Update Bills Budget" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewFood"
            android:layout_width="295dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/cv3" />

        <EditText
            android:id="@+id/edt_food_settings"
            android:layout_width="266dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:hint="Update Food Budget" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewEntertainment"
            android:layout_width="295dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/cv4" />

        <EditText
            android:id="@+id/edt_entertainment_settings"
            android:layout_width="266dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:hint="Update Entertainment Budget" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewOther"
            android:layout_width="295dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/cv5" />

        <EditText
            android:id="@+id/edt_other_settings"
            android:layout_width="266dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:hint="Update Other Budget" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_finish_settings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/done" />

</LinearLayout>