<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/linearLayout_dashboard"
        android:layout_width="408dp"
        android:layout_height="316dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="63.2dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/edt_total_dashboard"
                android:layout_width="375dp"
                android:layout_height="63.2dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="63.2dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/edt_bill_dashboard"
                android:layout_width="375dp"
                android:layout_height="63.2dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="63.2dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/edt_food_dashboard"
                android:layout_width="375dp"
                android:layout_height="63.2dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="63.2dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/edt_entertainment_dashboard"
                android:layout_width="375dp"
                android:layout_height="63.2dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="63.2dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/edt_other_dashboard"
                android:layout_width="375dp"
                android:layout_height="63.2dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_graph_dashboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="@drawable/ic_chart_column_solid"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_settings_dashboard"
        app:layout_constraintTop_toBottomOf="@+id/btn_addExpense_dashboard" />

    <Button
        android:id="@+id/btn_settings_dashboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_wrench_solid"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toEndOf="@+id/btn_addExpense_dashboard"
        app:layout_constraintTop_toBottomOf="@+id/btn_addExpense_dashboard" />

    <Button
        android:id="@+id/btn_account_dashboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_account"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_graph_dashboard"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addExpense_dashboard" />

    <Button
        android:id="@+id/btn_addExpense_dashboard"
        android:layout_width="153dp"
        android:layout_height="87dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Add Expense"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />


</androidx.constraintlayout.widget.ConstraintLayout>